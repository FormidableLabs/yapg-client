{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "preserveSymlinks": true,
    "removeComments": false,
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
